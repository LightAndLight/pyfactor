build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Data.Validate
                     , Language.Python.Syntax
                     , Language.Python.Internal.Optics
                     , Language.Python.Internal.Parse
                     , Language.Python.Internal.Render
                     , Language.Python.Internal.Syntax
                     , Language.Python.Validate.Syntax
                     , Language.Python.Validate.Syntax.Error
                     , Language.Python.Validate.Indentation
                     , Language.Python.Validate.Indentation.Error
  build-depends:       base >=4.9 && <4.11
                     , lens
                     , type-level-sets >=0.8.6.0
                     , parsers
                     , trifecta
                     , mtl
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O2
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror

executable example
  main-is:             Main.hs
  other-modules:       Example
  hs-source-dirs:      example
  build-depends:       base >=4.9 && <4.11, lens, pyfactor
  default-language:    Haskell2010
  ghc-options:         -O2
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror

test-suite pyfactor-tests
  main-is:             Main.hs
  type:                exitcode-stdio-1.0
  other-modules:       Generators
  hs-source-dirs:      test
  build-depends:       base >=4.9 && <4.11, pyfactor, hedgehog
  default-language:    Haskell2010
  ghc-options:         -O2
                       -Wincomplete-patterns
                       -Wincomplete-record-updates
                       -Wunused-imports
                       -Werror